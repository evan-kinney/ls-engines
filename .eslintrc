{
	"root": true,

	"extends": "@ljharb/eslint-config/node/12",

	"parserOptions": {
		"ecmaVersion": "2020",
	},

	"rules": {
		"array-bracket-newline": 0,
		"func-style": 1,
		"max-len": 0,
		"max-lines-per-function": [2, 100],
		"max-lines": 0,
		"max-params": [2, 5],
		"max-nested-callbacks": [2, 4],
		"object-curly-newline": 0,
		"require-atomic-updates": 0,
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"max-params": 0,
			},
		},
	],
}
